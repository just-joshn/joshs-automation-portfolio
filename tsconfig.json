{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": { "*": ["node_modules/*"] },
    "types": ["node", "playwright", "@playwright/test"]
  },
  "include": ["tests/**/*.ts", "playwright.config.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
